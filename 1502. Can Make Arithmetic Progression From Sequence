/**
 * @param {number[]} arr
 * @return {boolean}
 */
var canMakeArithmeticProgression = function(arr) {
    if(arr.length === 2){  //Nếu mảng có 2 phần tử thì mảng luôn là cấp số cộng
      return true; 
    }
    else{
        arr.sort((a,b) => {return a - b}) //sắp xếp mảng tăng dần
        let max = arr[0] > arr[1] ? arr[0] : arr[1]; //tìm max
        let min = arr[0] < arr[1] ? arr[0] : arr[1]; //tìm min
        let congsai = max - min; //tính công sai 
        for(let i = 0; i < arr.length-1; i++){ //duyệt từ đầu mảng
            if((arr[i] + congsai) !== arr[i+1]){ //kiểm tra xem giá trị sau có bằng giá trị trước + công sai không 
                return false;  //Nếu khác => mảng không phải cấp số cộng return false 
                break; //thoát khỏi vòng lặp
            }
        }
        return true; //trả về true khi giá trị sau luôn bằng giá trị trước + công sai
    }
};
